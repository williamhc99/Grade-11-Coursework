import java.util.Scanner;
class ArrayProcessing2{
  public static void (String args[]){
    Scanner myScanner = new Scanner(System.in);
    string[] nameArray = new string [10];
    int[] mathMarkArray = new int [10];
    int[] scienceMarkArray = new int [10];
    int[] averageMarkArray = new int [10];
    for (int i=0; i<nameArray.length; i++){
      System.out.println("Enter your name: ");
      nameArray[i]=myScanner.nextLine();
      System.out.println("Enter your math mark: ");
      mathMarkArray[i]=myScanner.nextInt();
      System.out.println("Enter your science mark: ");
      scienceMarkArray[i]=myScanner.nextInt();
      myScanner.nextLine();
      myScanner.nextLine();
      averageMarkArray[i]=((scienceMarkArray[i]+mathMarkArray)/2);
    }
    