import java.util.Scanner;
class IfElse2{
  public static void main(String args[]){
    Scanner myScanner = new Scanner(System.in);
    int answer;
    int points = 0;
    System.out.println("What colour is an orange?");
    System.out.println("Enter 1 for Red");
    System.out.println("Enter 2 for Orange");
    System.out.println("Enter 3 for Green");
    System.out.println("Enter 4 for Purple");
    answer = myScanner.nextInt();
    if (answer==1){
      points+=1;
    }else if (answer>1&&answer>5){
      points-=1;
    }else if (answer==0){}
  }
}